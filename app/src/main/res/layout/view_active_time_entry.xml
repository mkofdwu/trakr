<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="java.time.format.DateTimeFormatter" />

        <variable
            name="timeEntry"
            type="com.example.trakr.models.TimeEntry" />

        <variable
            name="fragment"
            type="com.example.trakr.ui.HomeFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:paddingStart="30dp"
        android:paddingTop="36dp"
        android:paddingEnd="0dp"
        android:paddingBottom="36dp">

        <TextView
            android:id="@+id/duration_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_heavy"
            android:textColor="@color/lightPrimaryOnAbsolute"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="06:39" />

        <TextView
            android:id="@+id/time_entry_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/avenir_medium"
            android:text="@{timeEntry.title}"
            android:textColor="@color/primary"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/duration_text"
            tools:text="Create a test" />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="30dp"
            android:background="@color/lightPrimaryOnAbsolute"
            app:layout_constraintBottom_toBottomOf="@id/duration_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/duration_text"
            app:layout_constraintTop_toTopOf="@id/duration_text" />

        <ImageView
            android:id="@+id/delete_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:contentDescription="@string/delete_icon"
            android:onClick="@{() -> fragment.deleteActiveTimeEntry()}"
            android:src="@drawable/delete"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/finish_btn"
            app:tint="@color/primary" />

        <ImageView
            android:id="@+id/finish_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:contentDescription="@string/finish_icon"
            android:onClick="@{() -> fragment.finishActiveTimeEntry()}"
            android:src="@drawable/check"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:tint="@color/primary" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>