<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_gravity="center"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/placeholder_illustration"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/man_looking_at_charts"
        android:layout_marginBottom="48dp"
        android:src="@drawable/undraw_analytics_illustration" />

    <TextView
        android:id="@+id/placeholder_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/avenir_book"
        android:text="@string/add_more_time_entries_so_we_can_calculate_your_stats"
        android:gravity="center"
        android:textSize="16sp" />
</LinearLayout>